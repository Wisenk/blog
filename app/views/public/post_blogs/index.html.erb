<div class="container my-5">
  <h1 class="mb-4 text-center">Explore Delicious Posts</h1>

  <% if params[:scope] == "users" %>
    <h2 class="mb-3">User Results</h2>
    <% if @users.present? %>
      <ul class="list-group">
        <% @users.each do |user| %>
          <li class="list-group-item">
            <%= link_to user.name, user_path(user), class: "text-decoration-none" %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p>No users found.</p>
    <% end %>
  <% else %>
    <%= render "public/post_blogs/posts", post_blogs: @post_blogs %>
  <% end %>
</div>
