<header class="bg-dark text-white py-3">
  <div class="container">
    <h1 class="m-0">
      <%= link_to 'BLOG ~Believe on Gourmet~', root_path, class: 'text-white text-decoration-none' %>
    </h1>
    <p class="lead">満喫なグルメ冒険</p>
  </div>

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mr-auto mb-2 mb-lg-0">
          <li class="nav-item"><%= link_to 'Home', root_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'About', about_path, class: 'nav-link' %></li>

          <% if user_signed_in? %>
            <li class="nav-item"><%= link_to 'Post', new_post_blog_path, class: 'nav-link'%></li>
            <li class="nav-item"><%= link_to 'My Profile', user_path(current_user), class: 'nav-link' %></li>
            <li class="nav-item"><%= link_to 'My Posts', myposts_path, class: 'nav-link' %></li>
            <li class="nav-item"><%= link_to 'Explore Posts', post_blogs_path, class: 'nav-link' %></li>
          <% end %>
        </ul>

        <form class="form-inline my-2 my-lg-0 ml-auto" action="<%= search_post_blogs_path %>" method="get">
          <input class="form-control mr-sm-2" type="search" name="query" placeholder="Search posts..." aria-label="Search">
          <button class="btn btn-outline-light mr-4" type="submit">Search</button>
        </form>
      </div>

      <div class="d-flex">
        <% if user_signed_in? %>
          <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'btn btn-primary' %>
        <% else %>
          <%= link_to 'Sign In', new_user_session_path, class: 'btn btn-primary mr-2' %>
          <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary' %>
        <% end %>
      </div>

    </div>
  </nav>
</header>
