<%= render "layouts/error_messages", model: post_blog %>

<%= form_with(model: post_blog, local: true, html: { class: "needs-validation" }) do |f| %>

<div class="mb-3">
    <%= f.label :image, class: "form-label" %>
    <%= f.file_field :image, class: "form-control" %>
    <% if post_blog.image.attached? %>
        <div class="mt-2">
            <%= image_tag post_blog.image.variant(resize: "200x200"), class: "img-thumbnail" %>
        </div>
    <% end %>
</div>


<div class="mb-3">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control", placeholder: "Enter a tasty title" %>
</div>

<div class="mb-3">
    <%= f.label :body, class: "form-label" %>
    <%#= f.text_area :body, rows: 6, class: "form-control", placeholder: "Write something delicious..." %>
    <%= f.rich_text_area :body %>
</div>

<div class="d-grid">
    <%= f.submit "Create Post", class: "btn btn-primary btn-lg" %>
</div>
<% end %>


