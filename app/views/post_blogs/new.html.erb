<div class="container my-5" style="max-width: 700px;">
  <h1 class="mb-4 text-center">Create a New Post</h1>

  <% if @post_blog.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading">Oops! Something went wrong:</h4>
      <ul>
        <% @post_blog.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with(model: @post_blog, local: true, html: { class: "needs-validation" }) do |f| %>
    <div class="mb-3">
      <%= f.label :title, class: "form-label" %>
      <%= f.text_field :title, class: "form-control", placeholder: "Enter a tasty title" %>
    </div>

    <div class="mb-3">
      <%= f.label :body, class: "form-label" %>
      <%= f.text_area :body, rows: 6, class: "form-control", placeholder: "Write something delicious..." %>
    </div>

    <div class="mb-3">
      <%= f.label :image, class: "form-label" %>
      <%= f.file_field :image, class: "form-control" %>
    </div>

    <div class="d-grid">
      <%= f.submit "Create Post", class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>

</div>
