<div class="row">
  <% @post_blogs.each do |post_blog| %>
    <div class="col-12 col-md-4 mb-4">
      <div class="card h-100 shadow-sm">
        <% if post_blog.image.attached? %>
          <%= image_tag post_blog.image, class: "card-img-top", style: "height: 200px; object-fit: cover;" %>
        <% end %>

        <div class="card-header d-flex justify-content-between align-items-center">
          <%= link_to "#{post_blog.post_comments.count} Comments", post_blog_path(post_blog.id), class: 'text-secondary' %>            
        </div>

        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= post_blog.title %></h5>
          <p class="card-text"><%#= post_blog.body %></p>
          <%= link_to 'Read More', post_blog_path(post_blog), class: 'btn btn-primary mt-auto' %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if @post_blogs.empty? %>
  <p class="text-center">No posts yet. Why not create one?</p>
  <% if user_signed_in? %>
    <div class="text-center">
      <%= link_to 'Create New Post', new_post_blog_path, class: 'btn btn-success' %>
    </div>
  <% end %>
<% end %>
