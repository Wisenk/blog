<div class="container mt-5">
  <div class="card mx-auto" style="max-width: 600px;">
    <div class="card-body text-center">
        <% if @user.profile_image.attached? %>
            <%= image_tag @user.profile_image, variants: { resize_to_limit: [150, 150] }, class: "rounded-circle mb-3", width: 150, height: 150 %>
        <% else %>
            <blockquote class="text-muted">No profile picture available</blockquote>
        <% end %>

      <h5 class="text-muted mb-0">Name</h5>
      <h4 class="card-title"><%= @user.name %></h4>
      
      <%= link_to 'Edit Profile', edit_user_path(@user), class: 'btn btn-primary mt-3' %>
    </div>
  </div>
</div>