<div class="container mt-5">
  <div class="card mx-auto" style="max-width: 600px;">
    <div class="card-body text-center">
        <% if @user.profile_image.attached? %>
            <%= image_tag @user.profile_image.variant(resize_to_limit: [100, 100]), class: "rounded-circle mb-3", width: 100, height: 100 %>
          <% else %>
            <%= image_tag "no_image.jpg", class: "rounded-circle mb-3", width: 100, height: 100 %>
          <% end %>

      <h5 class="text-muted mb-0">Name</h5>
      <h4 class="card-title"><%= @user.name %></h4>
      
      <%= link_to 'Edit Profile', edit_user_path(@user), class: 'btn btn-primary mt-3' %>
    </div>
  </div>
</div>