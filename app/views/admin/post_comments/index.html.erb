<div class="container mt-4">
  <%= link_to "← Back to Dashboard", admin_dashboard_path, class: "btn btn-secondary mb-3" %>

  <h2>Admin - Manage Comments</h2>
  <table class="table table-bordered table-striped">
    <thead class="thead-dark">
      <tr>
        <th>Post</th>
        <th>Commenter</th>
        <th>Content</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @post_comments.each do |post_comment| %>
        <tr>
          <td><%= post_comment.post_blog.try(:title) %></td>
          <td><%= post_comment.user.try(:name) %></td>
          <td><%= post_comment.comment %></td>
          <td>
            <%= link_to "Delete", admin_post_comment_path(post_comment),
                method: :delete,
                data: { confirm: "Are you sure you want to delete this comment?" },
                class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
