<div class="container mt-4">
  <%= link_to "â† Back to Dashboard", admin_dashboard_path, class: "btn btn-secondary mb-3" %>

  <h2>Admin - Manage Posts</h2>
  <table class="table table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Created At</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @post_blogs.each do |post_blog| %>
        <tr>
          <td><%= post_blog.title %></td>
          <td><%= post_blog.user.try(:name) %></td>
          <td><%= post_blog.created_at.strftime("%Y-%m-%d %H:%M") %></td>
          <td>
            <%= link_to "Delete", admin_post_blog_path(post_blog),
                method: :delete,
                data: { confirm: "Are you sure you want to delete this post?" },
                class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
