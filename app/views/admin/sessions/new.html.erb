<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-4">
      <div class="card shadow-sm mt-5">
        <div class="card-header text-center">
          <h4 class="mb-0">Admin Login</h4>
        </div>
        <div class="card-body">
          <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
            
            <div class="form-group">
              <%= f.label :email, class: "font-weight-bold" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password, class: "font-weight-bold" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-check mb-3">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, class: "form-check-label" %>
              </div>
            <% end %>

            <div class="d-grid">
              <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
            </div>

          <% end %>
        </div>
        <div class="card-footer text-center">
          <%= render "admin/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
