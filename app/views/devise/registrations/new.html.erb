<%= render "layouts/flash_messages" %>  
<%= render "layouts/error_messages", object: resource %>


<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm rounded">
        <div class="card-body">
          <h2 class="text-center mb-4">Sign Up</h2>

          <%= form_with model: resource, url: registration_path(resource_name), local: true, multipart: true do |f| %>

            <div class="form-group">
              <%= f.label :profile_image, "Profile Image" %>
              <%= f.file_field :profile_image, class: "form-control-file", accept: "image/*" %>

              <div class="mt-2 text-center">
                <% if resource.profile_image.attached? %>
                  <%= image_tag resource.get_profile_image, class: "img-thumbnail", width: 150, height: 150 %>
                <% else %>
                  <%= image_tag "no_image.jpg", class: "img-thumbnail", width: 150, height: 150 %>
                <% end %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :name, "Name" %>
              <% if @minimum_user_name_length %>
                <small class="form-text text-muted">
                  Name must be at least <%= @minimum_user_name_length %> characters long.
                </small>
              <% end %>
              <%= f.text_field :name, class: "form-control", required: true %>
            </div>

            <div class="form-group">
              <%= f.label :email, "Email" %>
              <%= f.email_field :email, class: "form-control", required: true %>
            </div>

            <div class="form-group">
              <%= f.label :body, "About Me" %>
              <%= f.text_area :body, class: "form-control", rows: 3, placeholder: "Tell us about yourself..." %>
            </div>

            <div class="form-group">
              <%= f.label :password, "Password" %>
              <% if @minimum_password_length %>
                <small class="form-text text-muted">
                  Password must be at least <%= @minimum_password_length %> characters long.
                </small>
              <% end %>
              <%= f.password_field :password, class: "form-control", required: true, autocomplete: "new-password" %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, "Confirm Password" %>
              <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm your password" %>
            </div>

            <div class="text-center">
              <%= f.submit "Sign Up", class: "btn btn-primary" %>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render "devise/shared/links" %>
