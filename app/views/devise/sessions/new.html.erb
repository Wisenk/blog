<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm rounded">
        <div class="card-body">
          <h2 class="text-center mb-4">Sign In</h2>

          <%= form_with model: resource, url: session_path(resource_name), local: true do |f| %>

            <div class="form-group">
              <%= f.label :email, "Email" %>
              <%= f.email_field :email, class: "form-control", required: true %>
            </div>

            <div class="form-group">
              <%= f.label :password, "Password" %>
              <%= f.password_field :password, class: "form-control", required: true %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-group form-check">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, class: "form-check-label" %>
              </div>
            <% end %>

            <div class="text-center">
              <%= f.submit "Sign In", class: "btn btn-primary" %>
            </div>
          <% end %>

          <div class="text-center mt-3">
            <p>Don't have an account? <%= link_to "Sign Up", new_registration_path(resource_name) %></p>
            <p><%= link_to "Forgot your password?", new_password_path(resource_name) %></p>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>


